<section class="py-20 h-screen bg-slate-200">
  <div class="text-center h-full p-10">
    <h2 class="fw-bold m-3 text-3xl">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="my-5">
        <%= f.email_field :email, autofocus: true, placeholder: "your_email@some.com", autocomplete: "email", class: "w-full bg-gray-100 p-2" %>
      </div>

      <div class="my-5">
        <%= f.password_field :password, placeholder: "password",autocomplete: "current-password", class: "w-full bg-gray-100 p-2" %>
      </div>

      <div class="my-3">
        <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        <% end %>
      </div>

      <button class="bg-slate-700 hover:bg-slate-400 text-white font-bold py-2 px-4 m-3 rounded">      
        <%= f.submit "Log in" %>
      </button>
    <% end %>

    
    <%= render "devise/shared/links" %>
  </div>
</section>