
<section class="bg-slate-200 h-screen flex flex-col items-stretch justify-between">
    <header class="header bg-slate-700 flex justify-between items-center px-4">
        <%= link_to image_tag("https://img.icons8.com/stickers/344/back.png"), categories_path, class: "back_btn" %>
        <h1 class="text-white font-bold">Categories</h1>
    </header>

    <% if flash.notice %>
        <p><%= notice %></p>
    <% end %>

    <div class="border-red-900 h-3/6">
        <% @categories.each do |category| %>
            <%= render category %>
        <% end %>
    </div>
       
    <footer class="header bg-slate-700 flex items-center justify-center">
        <button class="bg-slate-500 hover:bg-slate-400 text-white font-bold py-2 px-4 m-3 rounded">
            <%= link_to "Add Category", new_category_path %>
        </button>
    </footer>
</section>