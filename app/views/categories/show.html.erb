<section class="text-center vh-100">
    <div class="header d-flex align-items-center justify-content-between px-4">
    <div>
        <%= link_to image_tag("https://img.icons8.com/ultraviolet/344/long-arrow-left.png"), root_path, class: "back_btn" %>
    </div>
        <h4 class="text-white">Transactions</h4>
    </div>

    <% if flash[:notice] %>
        <p class="alert alert-primary" role="alert"><%= notice %></p>
    <% end %>
    <%= render @category %>
    <% @expenses.each do |expense| %>
        <div class="d-flex justify-content-between mb-2 mx-4 p-2 card m-3 rounded">
            <div><%= expense.name.capitalize %></div>
            <div>$<%= expense.amount %></div>
        </div>
    <% end %>

    <div class="footer fixed-bottom py-4">        
        <%= link_to "Add Expense", new_expense_path, class: "btn main-color" %>        
        <% if user_signed_in? %> 
           <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn main-color" %>
        <% end %>
    </div>
</section>

